<div class="card co-{{co.cvr}}">
  <div class="content">
    <div class="right floated meta">
      <i class="edit green icon" {{action showCustomer co.id co.cvr}}></i>
    </div>
    <div class="header title">{{co.companyname}}</div>
  </div>
  <div class="content">
    <div class="details">
      <div class="ui relaxed list">

        <div class="item">
          <i class="marker icon ui basic grey small"></i>
          <div class="content">{{co.companyadr1}}, {{co.companyadr2}}, {{co.companyadr3}}, {{co.companyadr4}}</div>
        </div>

        <div class="item">
          <i class="mail outline icon ui basic grey small"></i>
          <div class="content">{{co.mainmail}}</div>
        </div>

        <div class="item">
          <i class="phone outline icon ui basic grey small"></i>
          <div class="content">{{format-phone co.mainphone}}</div>
        </div>

      </div>
    </div>
  </div>
  <div class="extra content">
    <div class="right floated item">
      <i class="remove grey icon" {{action removeCustomer co.id}}></i>
    </div>
    <div class="item">
      <i class="id card icon basic black"></i>
      <span>{{co.cvr}}</span>
    </div>
  </div>
</div>
<div class="ui top fixed large menu">
  <div class="item togglecon" {{ action 'togglesidebar'}}>
    <i class="{{if isHide 'sidebar' 'blue remove'}} icon"></i>
  </div>

  <div class="header item">
    <span class="title">{{routename}}</span>
  </div>

  <div class="right menu">
    <div class="item">
      {{#ui-search
          source=someList
          onSearchQuery=(action (mut query))
          onSelect=(action (mut selected))}}
        <div class="ui transparent icon input">
          <input class="prompt" type="text" placeholder="Search...">
          <i class="search link icon"></i>
        </div>
        <div class="results"></div>
      {{/ui-search}}
    </div>

    {{#link-to 'plan' class="item enhance"}}
      <i class="add icon"></i> Add Rule
    {{/link-to}}

    {{#ui-dropdown class="scrolling item icon notify"}}
      <i class="alarm icon"></i>
      <span class="ui circular empty green label"></span>
      {{alerts-menu}}
    {{/ui-dropdown}}

    {{#ui-dropdown class="item icon"}}
      <i class="icon sliders"></i>
      <div class="menu user-menu">
        {{#link-to "profile" class="item"}}
          <i class="id badge icon"></i>My Profile
        {{/link-to}}

        <div class="divider"></div>
        <a href="#" class="item" {{action 'invalidateSession'}}>
          <i class="sign out icon"></i>Sign Out
        </a>
      </div>
    {{/ui-dropdown}}
  </div>
</div>

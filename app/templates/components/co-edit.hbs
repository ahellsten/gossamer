    <div class="ui dividing medium header green">Networks</div>
    <div class="required field togDisabled disabled column">
      <label>Name</label>
      {{input type="text" id="netname" name="netname" placeholder="Skynet" value=netname}}
    </div>
    <div class="required field togDisabled disabled column">
      <label>Type</label>
      {{!-- {{input type="text" id="netkind" name="netkind" placeholder="ipv4" value=netkind}} --}}
      {{#ui-dropdown class="selection" selected="ipv4" onChange=(action (mut netkind)) selected=netkind}}
        <div class="default text">IP Ver.</div>
        <i class="dropdown icon"></i>
        <div class="menu">
          <div class="item" data-value="ipv4">
            ipv4
          </div>
        </div>
      {{/ui-dropdown}}
    </div>
    <div class="required field togDisabled disabled column">
      <label>ipv4/prefix</label>
      {{input type="text" id="netformat" name="netformat" placeholder="255.255.255.255/32" value=netformat}}

    </div>
    <div class="field togDisabled disabled column">
      <label>Description</label>
      {{input type="text" id="netdesc" name="netdesc" placeholder="skynet is alive" value=netdesc}}
    </div>
    <div class="field disabled center aligned togDisabled column">
      <label>&nbsp;</label>
      {{#ui-popup content="Add Network" variation="small inverted" position="top left"}}
        <button class="ui icon button grey" {{action addNetwork coid netname netkind netformat netdesc on='click'}}>
          <i class="plus icon"></i>
        </button>
      {{/ui-popup}}
    </div>
    <div class="ui list ">
      {{#each networks as |net|}}
        {{#if (eq net.customerid coid)}}
        <div class="item">
          <div class="ui icon basic green label">
            <i class="icon fork"></i>
            <div class="detail">{{net.name}} [{{net.net}}]</div>
            <i class="delete icon" {{action removeNetwork net.id}}></i>
          </div>
        </div>
        {{/if}}
      {{/each}}
    </div>



    <button class="ui animated fade button green disabled togDisabled" type="submit" {{action saveCustomer}}>
      <div class="visible content">Save</div>
      <div class="hidden content"><i class="{{buttonico}} icon"></i></div>
    </button>
    <button class="ui animated fade button grey" type="reset" {{action resetForm on='click'}}>
      <div class="visible content">Reset</div>
      <div class="hidden content"><i class="cancel icon"></i></div>
    </button>

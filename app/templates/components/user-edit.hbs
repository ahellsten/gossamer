<h2 class="title sticky">Edit <span class="enhance">{{firstname}}</span></h2>
<div class="edit-box">
  <form class="ui form" {{action saveUser on="submit"}}>
      <div class="required field">
        <label>Administrator Type</label>
        <div class="inline fields togDisabled disabled">
          <div class="field">
            {{ui-radio
                name="kind"
                label="Network"
                value="netadmin"
                current=kind
                onChange=(action (mut kind))}}
          </div>
          <div class="field">
            {{ui-radio
                name="kind"
                label="DataBase"
                value="dbadmin"
                current=kind
                onChange=(action (mut kind))}}
          </div>
          <div class="field">
            {{ui-radio
                name="kind"
                label="Global"
                value="globaladmin"
                current=kind
                onChange=(action (mut kind))}}
          </div>
        </div>
      </div>
      <div class="required field">
        <label>Customer</label>
        {{#ui-dropdown
            class="search selection togDisabled disabled"
            allowAdditions=false
            selected=companyname
            onChange=(action (mut customerid))}}
          <i class="dropdown icon"></i>
          <div class="default text" data-value="">Co. Inc.</div>
          <div class="menu">
            {{#each customers as |co|}}
              <div class="item" data-value="{{co.id}}" data-text="{{co.companyname}}">
                {{co.companyname}}
              </div>
            {{/each}}
          </div>
        {{/ui-dropdown}}
      </div>
      <div class="required field">
        <label>Networks of {{companyname}}</label>
        {{#ui-dropdown
            class="search multiple selection togDisabled disabled"
            allowAdditions=false
            selected=netids
            onChange=(action (mut netids))}}
          <i class="dropdown icon"></i>
          <div class="default text" data-value="">Networks</div>
          <div class="menu">
            {{#each networks as |net|}}
              {{!-- {{#if (eq (is-user-network conetlist net.id) true)}} --}}
                <div class="item" data-value="{{net.id}}" data-text="{{net.id}}, {{net.net}}">
                  <i class="fork icon"></i>
                  {{net.id}}, <span class="ui label basic black small">{{net.net}}</span>, {{net.name}}
                </div>
              {{!-- {{/if}} --}}
            {{/each}}
          </div>
        {{/ui-dropdown}}

      </div>

    <button class="ui animated fade button green disabled togDisabled" type="submit">
      <div class="visible content">{{act}}</div>
      <div class="hidden content"><i class="{{buttonico}} icon"></i></div>
    </button>
    <button class="ui animated fade button grey" type="reset" {{action resetForm on="click"}}>
      <div class="visible content">Reset</div>
      <div class="hidden content"><i class="cancel icon"></i></div>
    </button>
  </form>
</div>